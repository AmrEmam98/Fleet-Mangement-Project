        android:label="FLeet Managment"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".carsFunctionality.activites.EditCarActivity"></activity>
        <activity android:name=".carsFunctionality.activites.CarHistoryActivity"></activity>
        <activity android:name=".driverFunctionality.activities.DriversDetailsActivity" />
