        <activity
            android:name=".carsFunctionality.activites.CarDetailsActivity"
            android:label="Car Details">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".carsFunctionality.activites.FleetActivity"></activity>
        <activity android:name=".homeFunctionality.HomeActivity"></activity>
        <activity android:name=".loginFunctionality.activities.LoginActivity" />
        <activity android:name=".SplashActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>